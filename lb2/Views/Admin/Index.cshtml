@using lb2.Models

@{
    ViewBag.Title = "Index";
}

<h2>List of users</h2>

<p>
    @Html.ActionLink("Add", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Login
        </th>
        <th>
            Full name
        </th>
        <th>
            Email
        </th>        
        <th></th>
    </tr>

@foreach (var user in ViewBag.users) {
    <tr>
        <td>
            @user.login
        </td>
        <td>
            @user.fullName
        </td>
        <td>
            @user.email
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { l = user.login }) |
            @Html.ActionLink("Delete", "Delete", new { l = user.login })
        </td>
    </tr>
}

</table>
